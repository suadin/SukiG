@inherits LayoutComponentBase

<div class="page @DarkLightMode()">
    <div class="sidebar">
        <NavMenu />
    </div>
    <div class="main d-flex align-items-start flex-column bd-highlight mb-3">
        <div class="p-4 bd-highlight">
            <button class="btn btn-primary" @onclick="@ToggleMode">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-brush" viewBox="0 0 16 16">
                    <path d="M15.825.12a.5.5 0 0 1 .132.584c-1.53 3.43-4.743 8.17-7.095 10.64a6.067 6.067 0 0 1-2.373 1.534c-.018.227-.06.538-.16.868-.201.659-.667 1.479-1.708 1.74a8.117 8.117 0 0 1-3.078.132 3.658 3.658 0 0 1-.563-.135 1.382 1.382 0 0 1-.465-.247.714.714 0 0 1-.204-.288.622.622 0 0 1 .004-.443c.095-.245.316-.38.461-.452.393-.197.625-.453.867-.826.094-.144.184-.297.287-.472l.117-.198c.151-.255.326-.54.546-.848.528-.739 1.2-.925 1.746-.896.126.007.243.025.348.048.062-.172.142-.38.238-.608.261-.619.658-1.419 1.187-2.069 2.175-2.67 6.18-6.206 9.117-8.104a.5.5 0 0 1 .596.04zM4.705 11.912a1.23 1.23 0 0 0-.419-.1c-.247-.013-.574.05-.88.479a11.01 11.01 0 0 0-.5.777l-.104.177c-.107.181-.213.362-.32.528-.206.317-.438.61-.76.861a7.127 7.127 0 0 0 2.657-.12c.559-.139.843-.569.993-1.06a3.121 3.121 0 0 0 .126-.75l-.793-.792zm1.44.026c.12-.04.277-.1.458-.183a5.068 5.068 0 0 0 1.535-1.1c1.9-1.996 4.412-5.57 6.052-8.631-2.591 1.927-5.566 4.66-7.302 6.792-.442.543-.796 1.243-1.042 1.826a11.507 11.507 0 0 0-.276.721l.575.575zm-4.973 3.04l.007-.005a.031.031 0 0 1-.007.004zm3.582-3.043l.002.001h-.002z" />
                </svg>
            </button>
            @if (ChatClosed)
            {
                <button @onclick="@OpenChat">Open Chat</button>
            }

            <span style="margin-right: 5px;"></span>
            <span>Tutorials:</span>
            <a href="http://blazor.net" target="_blank" class="ml-md-auto">Blazor</a>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
            </svg>
            <a href="https://docs.microsoft.com/de-de/azure/azure-signalr/signalr-tutorial-build-blazor-server-chat-app" target="_blank" class="ml-md-auto">Chat</a>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
            </svg>
            <a href="https://www.reddit.com/r/dotnet/comments/k9ryyw/blazor_webassembly_dark_mode_css_variables/" target="_blank" class="ml-md-auto">Dark Mode</a>

        </div>
        <div class="content px-4 p-2 bd-highlight" sstyle="height: 50%">
            @Body
        </div>
    </div>
    <div>
        <SukiG.Client.Pages.ChatRoom @ref="ChatRoom" @bind-Closed="@ChatClosed"></SukiG.Client.Pages.ChatRoom>
    </div>
</div>

@code {
    private SukiG.Client.Pages.ChatRoom ChatRoom = new Pages.ChatRoom();
    private bool ChatClosed = false;
    private bool isChatClosed = false;
    private bool isDarkMode = false;
    private string DarkLightMode() => isDarkMode? "dark-mode" : string.Empty;
    private void ToggleMode() => isDarkMode = !isDarkMode;
    private void OpenChat() => ChatClosed = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        ChatRoom.ClosedChanged += ChildFiredEvent;
    }

    public void ChildFiredEvent(bool closed)
    {
        ChatClosed = closed;
        StateHasChanged();
    }
}
